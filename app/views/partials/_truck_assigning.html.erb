<div class="modal fade" id="truckAssigning" tabindex="-1" role="dialog" aria-labelledby="truckAssigningLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title modal-success">Select Truck For Package</h5>
        <h5 class="modal-title modal-no-fleet">No Fleet Found</h5>
        <h5 class="modal-title modal-loading hidden">Loading Trucks</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form.select :truck_id, {}, {}, {:id => 'trucks',:class => 'form-control form-control-small modal-success'} do %>
          <option value="" selected>Select Truck</option>
        <% end %>
        <p class="modal-no-fleet"><strong>There are no fleets for Receiver's City</strong></p>
        <p class="modal-loading"><strong>Loading...</strong></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
        <%= form.submit 'Create Package', :class => 'btn btn-primary modal-success' %>
      </div>
    </div>
  </div>
</div>