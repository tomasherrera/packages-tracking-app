<div class="toolbar">
  <%= link_to "+ New Fleet", new_fleet_path(), class: "btn btn-primary" %>
</div>
<table class="table table-dark fleets-table">
  <thead>
    <tr  class="bg-primary">
      <th scope="col">Fleet Codename</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Assigned Trucks</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @fleets.each do |fleet| %>
      <tr>
        <th scope="row"><%= fleet.codename %></th>
        <td><%= fleet.city %></td>
        <td><%= fleet.state %></td>
        <td><%= fleet.trucks.count %></td>
        <td><%= link_to "Add Truck", new_truck_path(city: fleet.city, state: fleet.state) %></td>
      </tr>
    <% end %>
</table>